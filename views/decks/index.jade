extends ../layout

block script
    script(type="text/javascript" src="../javascripts/ajax-helpers.js")
    script(type="text/javascript" src="../javascripts/interactions.js")

block content

    h1 Decks

    form(action="/decks" method="post")
        input#name(type="text" name="name")
        button.btn Create New

    div.decks     
            
        -each deck, i in decks
            a(href="/decks/#{deck._id}")
                div.deck(id="#{deck._id}")
                    span.name #{deck.name}                   