        if messages.error
            .alert.alert-danger
                div= messages.error
        if messages.info
            .alert.alert-info
                div= messages.info
        if messages.success
            .alert.alert-success
                div= messages.success

        form(method='POST')
            .form-group
                label(for='email') Email
                input.form-control(type='text', name='email', autofocus)
            button.btn.btn-primary(type='submit') Reset Password
        hr
            
        p Don't have an account? 
            a(href="/signup") Signup
        p Or go 
            a(href="/") home
